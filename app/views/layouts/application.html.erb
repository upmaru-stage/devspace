<!DOCTYPE html>
<html>
  <head>
    <title>Devspace</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main class="bg-white px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-base leading-7 text-gray-700">
        <% if notice %>
          <%= render partial: "notice", locals: { message: notice, color: "blue" } %>
        <% end %>
        <% if alert %> 
          <%= render partial: "notice", locals: { message: alert, color: "yellow" } %>
        <% end %>
        <% if user_signed_in? %>
          <div class="bg-white">
            <div class="mx-auto max-w-7xl flex gap-x-6 border-b py-4">
              <%= link_to "Home", root_path %>
              <%= link_to "Profile", edit_user_registration_path %>
              <%= button_to "Logout", destroy_user_session_path, method: :delete %>
            </div>
          </div>
        <% elsif !devise_controller? %>
          <div class="bg-white">
            <div class="mx-auto max-w-7xl flex gap-x-6 border-b py-4">
              <%= link_to "Home", root_path %>
              <%= link_to "Login", new_user_session_path %>
            </div>
          </div>
        <% end %>
        <div class="mt-6">
          <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
