<article class="flex max-w-xl flex-col items-start justify-between">
  <div class="flex items-center gap-x-4 text-xs">
    <time datetime="<%= post.created_at %>" class="text-gray-500"><%= post.created_at.strftime("%B %d, %Y") %></time>
    <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">Marketing</a>
  </div>
  <div class="group relative">
    <h2 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
      <%= link_to post do %>
        <span class="absolute inset-0"></span>
        <%= post.title %>
      <% end %>
    </h2>
    <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600"><%= post.body %></p>
  </div>
</article>