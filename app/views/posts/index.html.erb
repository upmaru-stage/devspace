<h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">My DevSpace</h1>
<p class="mt-2 text-lg leading-8 text-gray-600">My web dev blog</p>
<% if user_signed_in? %>
<div class="mt-10 flex items-center justify-center gap-x-6">
  <%= link_to "New Post", new_post_path, class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
</div>
<% end %>
<div class="mt-10 space-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16">
  <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
</div>
